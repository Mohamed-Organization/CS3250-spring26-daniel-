{
    "manifest_version": 2,
    "name": "Anonymous Theme Switcher",
    "version": "1.0.0",
    "description": "Changes theme groups.",
    "author": "Team Anonymous",
    "developer": {
        "name": "Ramin, Daniel, Julian, Alejandro, Moe"
    },
    "icons": {
        "16": "icons/icon.svg",
        "32": "icons/icon.svg",
        "48": "icons/icon.svg",
        "96": "icons/icon.svg",
        "128": "icons/icon.svg"
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/icon.svg",
            "32": "icons/icon.svg"
        },
        "default_popup": "src/popup.html",
        "default_title": "Anonymous Theme Switcher"
    },
    "background": {
        "scripts": ["src/background.js"],
        "persistent": true
    },
    "permissions": [
        "storage",
        "management",
        "theme",
        "alarms",
        "tabs"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "anonymous_theme_switcher@team-anonymous.org",
            "strict_min_version": "60.0"
        }
    }
}